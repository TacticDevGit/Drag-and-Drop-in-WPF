<UserControl x:Class="Drag_and_Drop.DisplayTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drag_and_Drop"
             mc:Ignorable="d" 
             Height="65
             " Width="50" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border>
        <Grid>
            <Image Source="{Binding Image}" Height="50" Width="50" Stretch="Uniform" VerticalAlignment="Top"/>
            <TextBlock Text="{Binding Text}" VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
